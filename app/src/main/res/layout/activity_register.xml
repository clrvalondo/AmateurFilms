<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.clrvalondo.valondo_finalexam.Register"
    android:background="#818181">


    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:background="@drawable/button_background"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name:"
        android:id="@+id/tv1"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/rfname"
        android:typeface="normal"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Name:"
        android:id="@+id/tv2"
        android:textColor="#ffffff"
        android:layout_below="@+id/rfname"
        android:layout_alignRight="@+id/tv1"
        android:layout_alignEnd="@+id/tv1"
        android:layout_marginTop="17dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/rlname"
        android:typeface="normal"
        android:singleLine="true"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/tv3"
        android:textColor="#ffffff"
        android:layout_below="@+id/rlname"
        android:layout_alignRight="@+id/tv2"
        android:layout_alignEnd="@+id/tv2"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/runame"
        android:typeface="normal"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:layout_below="@+id/tv3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/tv4"
        android:textColor="#ffffff"
        android:layout_below="@+id/runame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/remail"
        android:typeface="normal"
        android:singleLine="true"
        android:layout_below="@+id/tv4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/tv5"
        android:textColor="#ffffff"
        android:layout_below="@+id/remail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/rpass"
        android:password = "true"
        android:typeface="normal"
        android:singleLine="true"
        android:layout_below="@+id/tv5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/rounded_edittxt"
        android:id="@+id/rconfpass"
        android:password="true"
        android:typeface="normal"
        android:singleLine="true"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/register"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password:"
        android:id="@+id/tv6"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:layout_above="@+id/rconfpass"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2" />


</RelativeLayout>
