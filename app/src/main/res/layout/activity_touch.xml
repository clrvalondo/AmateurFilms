<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#818181">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X1,Y1:"
        android:textColor="#0b0a0a"
        android:textColorHint="#efefef"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="203dp"
        android:textSize="24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X2,Y2:"
        android:textColor="#040404"
        android:textColorHint="#efefef"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:id="@+id/textView"
        android:layout_below="@+id/txtxy1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Diff X and Y:"
        android:textColor="#050404"
        android:textColorHint="#efefef"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Motion:"
        android:textColor="#090808"
        android:textColorHint="#efefef"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quadrant:"
        android:textColor="#080606"
        android:textColorHint="#efefef"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/touch_img"
        android:layout_above="@+id/txtxy1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtxy1"
        android:gravity="bottom"
        android:textSize="20dp"
        android:textColor="#040303"
        android:textColorHint="#efefef"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtxy2"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignRight="@+id/txtxy1"
        android:layout_alignEnd="@+id/txtxy1"
        android:textColor="#050202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtdiff"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/txtxy2"
        android:layout_alignEnd="@+id/txtxy2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="#080303" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtmotion"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/txtxy2"
        android:layout_alignStart="@+id/txtxy2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#050101" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtquad"
        android:textColor="#040202"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

</RelativeLayout>